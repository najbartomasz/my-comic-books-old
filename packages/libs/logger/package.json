        "eslint": "8.9.0",
        "eslint-plugin-jest": "26.1.1",
        "jest": "27.5.1",
        "jest-mock-extended": "2.0.4",
        "jest-when": "3.5.1",
        "rimraf": "3.0.2",
        "ts-jest": "27.1.3",
        "typescript": "4.5.5"
    }
